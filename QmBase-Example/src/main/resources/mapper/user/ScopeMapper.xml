<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.it.user.infrastructure.repository.mapper.ScopeMapper">
    <resultMap id="BaseResultMap" type="com.example.it.user.infrastructure.repository.po.Scope">
        <id property="id" column="id"/>
        <result property="scopeCode" column="scope_code"/>
        <result property="scopeName" column="scope_name"/>
        <result property="description" column="description"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>
    <sql id="Base_Column_List">id,scope_code,scope_name,description,created_at</sql>
    <select id="findById" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM scope
        WHERE id = #{id}
    </select>
    <select id="findAll" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM scope
    </select>
    <insert id="insert" parameterType="com.example.it.user.infrastructure.repository.po.Scope">
        INSERT INTO scope
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="scopeCode != null">scope_code,</if>
            <if test="scopeName != null">scope_name,</if>
            <if test="description != null">description,</if>
            <if test="createdAt != null">created_at,</if>
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="scopeCode != null">#{scopeCode},</if>
            <if test="scopeName != null">#{scopeName},</if>
            <if test="description != null">#{description},</if>
            <if test="createdAt != null">#{createdAt},</if>
        </trim>
    </insert>
    <update id="updateById">
        UPDATE scope
        <set>
            <if test="id != null">id = #{id},</if>
            <if test="scopeCode != null">scope_code = #{scopeCode},</if>
            <if test="scopeName != null">scope_name = #{scopeName},</if>
            <if test="description != null">description = #{description},</if>
            <if test="createdAt != null">created_at = #{createdAt},</if>
        </set>
        WHERE id = #{id}
    </update>
    <update id="deleteById">
        DELETE FROM scope
        WHERE id = #{id}
    </update>
</mapper>